<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.5" />
    </startup>
    <system.serviceModel>
        <bindings>
            <basicHttpBinding>
                <binding name="Secure_ApiService">
                    <security mode="Transport">
                        <transport clientCredentialType="Basic" />
                    </security>
                </binding>
                <binding name="PlainHttp_ApiService">
                    <security mode="TransportCredentialOnly">
                        <transport clientCredentialType="Basic" />
                    </security>
                </binding>
            </basicHttpBinding>
        </bindings>
        <client>
            <endpoint address="https://apiconnector.com/v2/api.svc"
                binding="basicHttpBinding" bindingConfiguration="Secure_ApiService"
                contract="ApiServiceReference.ApiService" name="Secure_ApiService" />
            <endpoint address="http://apiconnector.com/v2/api.svc"
                binding="basicHttpBinding" bindingConfiguration="PlainHttp_ApiService"
                contract="ApiServiceReference.ApiService" name="PlainHttp_ApiService" />
        </client>
    </system.serviceModel>
</configuration>